<section class="relative w-screen h-screen flex justify-center items-center overflow-hidden bg-gradient-to-br from-base-100 via-base-200 to-base-300">
  <!-- Enhanced Background Elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_25%_25%,theme(colors.primary)_0%,transparent_60%)] animate-pulse" style="animation-duration: 8s;"></div>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_75%_75%,theme(colors.secondary)_0%,transparent_60%)] animate-pulse" style="animation-duration: 10s;"></div>
  </div>
  
  <!-- Professional Grid Overlay -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  
  <!-- Refined Floating Elements -->
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-[15%] left-[20%] w-2 h-2 bg-primary rounded-full animate-float-slow"></div>
    <div class="absolute top-[30%] right-[25%] w-3 h-3 bg-secondary rounded-full animate-float-medium"></div>
    <div class="absolute bottom-[35%] left-[30%] w-1 h-1 bg-accent rounded-full animate-float-fast"></div>
    <div class="absolute bottom-[20%] right-[15%] w-2 h-2 bg-primary rounded-full animate-float-medium"></div>
  </div>
  
  <!-- Main Content with Improved Spacing -->
  <div class="relative z-10 flex flex-col gap-8 text-center px-6 max-w-6xl mx-auto -mt-12">
    <!-- Company Name with Elegant Styling -->
    <div class="mb-2">
      <h1 class="text-sm md:text-lg lg:text-xl font-bold bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
        Senior Blockchain Company
      </h1>
    </div>
    
    <!-- Main Title with Enhanced Typography -->
    <div class="space-y-6">
      <!-- Improved Dynamic Typing Effect -->
      <div class="h-20 md:h-24 lg:h-28 flex items-center justify-center">
        <h2 id="typing-text" class="text-3xl md:text-5xl lg:text-6xl font-black text-base-content tracking-tight leading-tight min-h-[1.2em]">
          <span class="text-primary">Professional Software Solutions</span>
        </h2>
      </div>
    </div>
    
    <!-- Subtitle with Better Line Height and Spacing -->
    <p class="text-lg md:text-xl lg:text-2xl text-base-content/80 max-w-4xl mx-auto leading-relaxed animate-fade-in-up delay-500 py-2">
      Leading <span class="text-primary font-semibold">software development</span> with expertise in 
      <span class="text-secondary font-semibold">blockchain & AI</span> innovation for modern businesses
    </p>

    <!-- Enhanced CTA Buttons with More Space -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center animate-fade-in-up delay-700 mt-4">
      <a
        href="#about"
        class="btn btn-primary btn-lg text-white font-bold px-10 py-5 rounded-full hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl group"
      >
        <span class="mr-2">About Us</span>
        <i class="fa-solid fa-arrow-down group-hover:translate-y-1 transition-transform duration-300"></i>
      </a>
      
      <a
        href="/work"
        class="btn btn-outline btn-lg font-bold px-10 py-5 rounded-full hover:scale-105 transition-all duration-300 group"
      >
        <span class="mr-2">View Projects</span>
        <i class="fa-solid fa-external-link group-hover:translate-x-1 transition-transform duration-300"></i>
      </a>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
    <div class="w-6 h-12 border-2 border-primary rounded-full flex justify-center">
      <div class="w-1 h-3 bg-primary rounded-full mt-2 animate-pulse"></div>
    </div>
  </div>
</section>

<script>
  // Enhanced typing effect with better timing
  const texts = [
    "Premium Software Development",
    "Professional Website Design",
    "Innovative Mobile Applications", 
    "Expert Software Consulting",
    "Advanced Blockchain & AI Solutions"
  ];
  
  let textIndex = 0;
  let charIndex = 0;
  let isDeleting = false;
  let isPaused = false;
  const typingElement = document.getElementById('typing-text');
  
  function typeText() {
    const currentText = texts[textIndex];
    
    if (!typingElement) return;
    
    if (isPaused) {
      setTimeout(() => {
        isPaused = false;
        typeText();
      }, 2000);
      return;
    }
    
    if (isDeleting) {
      // Enhanced cursor effect for deletion
      typingElement.innerHTML = `<span class="text-primary">${currentText.substring(0, charIndex)}</span><span class="animate-pulse opacity-70">|</span>`;
      charIndex--;
    } else {
      // Enhanced cursor effect for typing
      typingElement.innerHTML = `<span class="text-primary">${currentText.substring(0, charIndex)}</span><span class="animate-pulse opacity-70">|</span>`;
      charIndex++;
    }
    
    // Improved timing logic
    if (!isDeleting && charIndex === currentText.length) {
      isPaused = true; // Pause at the end of typing
    } else if (isDeleting && charIndex === 0) {
      isDeleting = false;
      textIndex = (textIndex + 1) % texts.length;
    }
    
    // Variable speed for more natural typing effect
    let speed = isDeleting ? 40 : 80;
    
    // Randomize slightly for realistic effect
    speed += Math.random() * 40 - 20;
    
    // Start deleting after the pause
    if (isPaused) {
      setTimeout(() => {
        isPaused = false;
        isDeleting = true;
        typeText();
      }, 1800);
      return;
    }
    
    setTimeout(typeText, speed);
  }
  
  // Start typing effect after page load
  window.addEventListener('load', () => {
    setTimeout(typeText, 1000);
  });
</script>

<style>
  /* Improved animations with better timing */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 40px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 1.2s ease-out both;
  }
  
  /* Custom floating animations for elements */
  @keyframes float-slow {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(15px, -15px); }
  }
  
  @keyframes float-medium {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-10px, 10px); }
  }
  
  @keyframes float-fast {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(8px, -8px); }
  }
  
  .animate-float-slow {
    animation: float-slow 8s ease-in-out infinite;
  }
  
  .animate-float-medium {
    animation: float-medium 6s ease-in-out infinite;
  }
  
  .animate-float-fast {
    animation: float-fast 4s ease-in-out infinite;
  }
  
  .animate-bounce-slow {
    animation: bounce 2s infinite;
  }
  
  /* Professional grid background pattern */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(var(--b-rgb), 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(var(--b-rgb), 0.05) 1px, transparent 1px);
    background-size: 20px 20px;
  }
  
  /* Improved line spacing for text */
  #typing-text {
    line-height: 1.3;
    letter-spacing: -0.02em;
  }
  
  .delay-300 { animation-delay: 0.3s; }
  .delay-500 { animation-delay: 0.5s; }
  .delay-700 { animation-delay: 0.7s; }
  .delay-1000 { animation-delay: 1s; }
</style>