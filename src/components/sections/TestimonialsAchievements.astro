---
import Icon from "../Icon.astro";

interface Achievement {
  value: string;
  label: string;
  icon: string;
  color: string;
}

const achievements: Achievement[] = [
  {
    value: "2019",
    label: "Established",
    icon: "calendar",
    color: "text-blue-500"
  },
  {
    value: "50+",
    label: "Projects",
    icon: "rocket",
    color: "text-green-500"
  },
  {
    value: "40+",
    label: "Clients",
    icon: "handshake",
    color: "text-orange-500"
  },
  {
    value: "98%",
    label: "Success Rate",
    icon: "chart",
    color: "text-purple-500"
  }
];
---

<section class="py-20 bg-base-100">
  <div class="max-w-7xl mx-auto px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-base-content mb-6">
        Our <span class="text-primary">Achievements</span>
      </h2>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {achievements.map((achievement) => (
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary/20 mb-4">
            <Icon name={achievement.icon} size={32} class={achievement.color} />
          </div>
          <div class="text-3xl font-bold text-base-content mb-2">
            {achievement.value}
          </div>
          <div class="text-sm text-base-content/70">
            {achievement.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
