---
interface Service {
  name: string;
  description: string;
  features: string[];
  icon: string;
  color: string;
  gradient: string;
  benefits: string[];
}

const services: Service[] = [
  {
    name: "Programming",
    description: "Advanced software development focused on blockchain and AI, creating innovative solutions for modern businesses with cutting-edge technologies.",
    features: ["Full-Stack Development", "Backend Systems", "API Integration", "Database Design"],
    benefits: ["Enhanced Performance", "Scalable Solutions", "Code Quality", "Technical Excellence"],
    icon: "fa-solid fa-code",
    color: "text-blue-500",
    gradient: "from-blue-600 to-cyan-500"
  },
  {
    name: "Website Design",
    description: "Creating modern and responsive websites with optimal user experience, beautiful design and high performance for powerful digital presence.",
    features: ["Responsive Design", "Speed Optimization", "Advanced SEO", "Modern UI/UX"],
    benefits: ["Increased User Engagement", "Improved Rankings", "Better Mobile Experience", "Brand Strengthening"],
    icon: "fa-solid fa-globe",
    color: "text-green-500",
    gradient: "from-green-600 to-emerald-500"
  },
  {
    name: "Mobile Applications",
    description: "Developing high-quality mobile applications with visual user interface and smooth user experience for Android and iOS platforms.",
    features: ["Cross-Platform Development", "Native Performance", "Beautiful UI", "Backend Integration"],
    benefits: ["Wider Accessibility", "Consistent Experience", "Faster Time-to-Market", "Cost-Effective Solution"],
    icon: "fa-solid fa-mobile-screen",
    color: "text-orange-500",
    gradient: "from-orange-600 to-red-500"
  },
  {
    name: "Software Consulting",
    description: "Providing specialized consulting to businesses for digitalization, process optimization and smart development with blockchain and AI technologies.",
    features: ["Digital Strategy", "System Analysis", "Process Optimization", "Technology Implementation"],
    benefits: ["Reduced Manual Work", "Increased Efficiency", "Smart Development", "Future-Ready Solutions"],
    icon: "fa-solid fa-lightbulb",
    color: "text-purple-500",
    gradient: "from-purple-600 to-indigo-500"
  },
  {
    name: "Blockchain Development",
    description: "Building secure and decentralized blockchain solutions, smart contracts, and DeFi applications with advanced cryptographic technologies.",
    features: ["Smart Contracts", "DeFi Protocols", "NFT Platforms", "Decentralized Apps"],
    benefits: ["Enhanced Security", "Transparency", "Decentralization", "Trust & Immutability"],
    icon: "fa-solid fa-link",
    color: "text-cyan-500",
    gradient: "from-cyan-600 to-blue-500"
  },
  {
    name: "Artificial Intelligence",
    description: "Developing intelligent AI systems, machine learning models, and data analytics solutions to automate processes and enhance decision-making.",
    features: ["Machine Learning", "Natural Language Processing", "Computer Vision", "Predictive Analytics"],
    benefits: ["Process Automation", "Data-Driven Insights", "Improved Accuracy", "Competitive Advantage"],
    icon: "fa-solid fa-brain",
    color: "text-pink-500",
    gradient: "from-pink-600 to-rose-500"
  }
];
---

<section id="services" class="py-20 bg-gradient-to-b from-base-200 to-base-100">  <div class="max-w-7xl mx-auto px-8">    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-7xl font-black text-primary mb-6 tracking-tight">
        Our Services
      </h2>
      <div class="max-w-5xl mx-auto space-y-6">
        <p class="text-xl md:text-2xl text-base-content/90 leading-relaxed font-medium">
          Six core pillars of Senior Blockchain Company with expertise in blockchain and AI
        </p>
        <p class="text-lg md:text-xl text-base-content/80 leading-relaxed">
          Delivering innovative solutions and advanced technologies for modern businesses
        </p>
      </div>
    </div>    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="service-card group relative bg-base-100 rounded-3xl p-8 shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-base-300 overflow-hidden h-full flex flex-col"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Background Gradient Overlay -->
          <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-5 transition-opacity duration-500`}></div>
          
          <!-- Service Icon -->
          <div class="relative z-10 mb-6">
            <div class={`inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br ${service.gradient} rounded-2xl text-white text-2xl shadow-lg group-hover:scale-110 transition-transform duration-300`}>
              <i class={service.icon}></i>
            </div>
          </div>

          <!-- Service Content -->
          <div class="relative z-10 flex-1 flex flex-col">
            <h3 class="text-2xl font-bold text-primary mb-4 group-hover:text-secondary transition-colors duration-300">
              {service.name}
            </h3>
            
            <p class="text-base-content/80 leading-relaxed mb-6 text-sm flex-shrink-0">
              {service.description}
            </p>

            <!-- Technical Features -->
            <div class="mb-6">
              <h4 class="text-sm font-semibold text-base-content/90 mb-3 uppercase tracking-wide">Technical Capabilities</h4>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center text-sm">
                    <i class={`fa-solid fa-check-circle ${service.color} mr-3 text-sm group-hover:scale-110 transition-transform duration-300`}></i>
                    <span class="text-base-content/80">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>

            <!-- Business Benefits -->
            <div class="mb-6 flex-1">
              <h4 class="text-sm font-semibold text-base-content/90 mb-3 uppercase tracking-wide">Business Benefits</h4>
              <ul class="space-y-2">
                {service.benefits.map((benefit) => (
                  <li class="flex items-center text-sm">
                    <i class={`fa-solid fa-star ${service.color} mr-3 text-sm group-hover:scale-110 transition-transform duration-300`}></i>
                    <span class="text-base-content/80">{benefit}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <!-- Decorative Elements -->
          <div class="absolute top-4 right-4 w-8 h-8 bg-primary/10 rounded-full group-hover:scale-150 group-hover:bg-primary/20 transition-all duration-500"></div>
          <div class="absolute bottom-4 left-4 w-4 h-4 bg-secondary/10 rounded-full group-hover:scale-150 group-hover:bg-secondary/20 transition-all duration-700"></div>
        </div>
      ))}
    </div><!-- CTA Section -->
    <div class="text-center mt-16 p-10 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-3xl border border-primary/20">
      <h3 class="text-3xl md:text-4xl font-bold text-primary mb-4">
        Building the Future of Digital Infrastructure
      </h3>
      <p class="text-lg text-base-content/80 mb-6 max-w-3xl mx-auto leading-relaxed">
        At Senior Blockchain, we don't just build softwareâ€”we build the future of digital infrastructure. 
        Ready to transform your organization with cutting-edge technology solutions?
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact"
          class="btn btn-primary btn-lg px-8 py-4 rounded-full hover:scale-105 transition-all duration-300 group"
        >
          <span class="mr-2">Start Your Digital Transformation</span>
          <i class="fa-solid fa-rocket group-hover:translate-y-[-2px] transition-transform duration-300"></i>
        </a>
        <a 
          href="/work"
          class="btn btn-outline btn-lg px-8 py-4 rounded-full hover:scale-105 transition-all duration-300 group"
        >
          <span class="mr-2">Explore Our Projects</span>
          <i class="fa-solid fa-eye group-hover:scale-110 transition-transform duration-300"></i>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .service-card {
    animation: fadeInUp 0.8s ease-out both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translate3d(0, 60px, 0);
    }
    to {
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }

  .service-card:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--gradient-from), var(--gradient-to));
    border-radius: 1.5rem 1.5rem 0 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .service-card:hover::before {
    opacity: 1;
  }
</style>
