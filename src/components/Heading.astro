---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<div class="my-20 text-center">
  <div class="space-y-6">
    <h1 class="text-4xl md:text-6xl lg:text-7xl font-black mb-6 text-primary tracking-tight leading-tight">
      {title}
    </h1>
    
    <div class="w-24 h-1 bg-gradient-to-r from-primary to-secondary rounded-full mx-auto mb-8"></div>
    
    <h4 class="text-xl md:text-2xl font-medium text-base-content/80 max-w-3xl mx-auto leading-relaxed">
      {subtitle}
    </h4>
  </div>
</div>

<style>
  /* Improved line spacing and typography */
  h1 {
    letter-spacing: -0.02em;
    line-height: 1.2;
  }
  
  h4 {
    line-height: 1.6;
  }
</style>
