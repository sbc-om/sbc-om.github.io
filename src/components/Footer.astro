        })
      }
    </ul>
    <ul>
      <li class="text-base-content/80 font-bold">Support</li>
      {
        supportLinks.map(({ name, link }) => {
          return (
            <li>
              <a class="font-medium" target="_blank" href={link}>
                {name}
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>
