---
const services = [
  "Programming",
  "Website Design",
  "Application Design"
];

// Get the current year dynamically
const currentYear = new Date().getFullYear();
---

<footer class="bg-base-200 border-t border-base-300">
  <div class="max-w-7xl mx-auto px-8 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8">
      
      <!-- Company Info -->
      <div class="text-center md:text-left">
        <h3 class="text-lg font-bold text-primary mb-2">
          Senior Blockchain Company
        </h3>
        <p class="text-base-content/70 text-sm mb-2">
          Professional software development
        </p>
        <a 
          href="mailto:post@sbc.om"
          class="text-base-content/60 text-sm hover:text-primary transition-colors"
        >
          post@sbc.om
        </a>
      </div>

      <!-- Services -->
      <div class="text-center">
        <div class="flex gap-6 text-sm text-base-content/70">
          {services.map((service) => (
            <span class="hover:text-primary transition-colors cursor-default">
              {service}
            </span>
          ))}
        </div>
      </div>

      <!-- Copyright -->
      <div class="text-center md:text-right">
        <p class="text-base-content/60 text-sm">
          Â© {currentYear} SBC
        </p>
      </div>
    </div>
  </div>
</footer>
