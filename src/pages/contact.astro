---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Contact - Senior Blockchain Company">  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-base-100 to-base-200">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <div class="mb-4 -mt-4">
        <h1 class="text-sm md:text-lg font-bold text-primary mb-2">
          Senior Blockchain Company
        </h1>
      </div>
      <h2 class="text-3xl md:text-5xl font-black text-base-content mb-4 tracking-tight">
        Get Your Project Started
      </h2>
      <p class="text-lg text-base-content/70 leading-relaxed max-w-2xl mx-auto">
        Transform your ideas into reality with our expert development team. Professional software solutions starting from 100 OMR.
      </p>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-base-100">
    <div class="max-w-3xl mx-auto px-6">
      <div class="bg-base-200/30 rounded-3xl p-8 md:p-12 shadow-xl border border-base-300/50">
        <div class="text-center mb-10">
          <h3 class="text-2xl md:text-3xl font-bold text-primary mb-4">
            Project Inquiry Form
          </h3>
          <p class="text-base-content/70 text-lg">
            Tell us about your project and get a professional quote
          </p>
        </div>

        <form class="space-y-8" id="contact-form">
          <!-- Personal Information -->
          <div class="grid md:grid-cols-2 gap-6">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Full Name *</span>
              </label>
              <input 
                type="text" 
                name="name"
                placeholder="Enter your full name"
                required
                class="input input-bordered w-full focus:input-primary bg-base-100 text-base h-12"
              />
            </div>
            
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Email Address *</span>
              </label>
              <input 
                type="email" 
                name="email"
                placeholder="your.email@example.com"
                required
                class="input input-bordered w-full focus:input-primary bg-base-100 text-base h-12"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-6">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Phone Number</span>
              </label>
              <input 
                type="tel" 
                name="phone"
                placeholder="+968 XXXX XXXX"
                class="input input-bordered w-full focus:input-primary bg-base-100 text-base h-12"
              />
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Company Name</span>
              </label>
              <input 
                type="text" 
                name="company"
                placeholder="Your company (optional)"
                class="input input-bordered w-full focus:input-primary bg-base-100 text-base h-12"
              />
            </div>
          </div>

          <!-- Project Details -->
          <div class="grid md:grid-cols-2 gap-6">
            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Service Required *</span>
              </label>
              <select name="service" required class="select select-bordered w-full focus:select-primary bg-base-100 text-base h-12">
                <option disabled selected>Select a service</option>
                <option value="Programming">Programming & Development</option>
                <option value="Website Design">Website Design & Development</option>
                <option value="Mobile Applications">Mobile Applications</option>
                <option value="Software Consulting">Software Consulting</option>
                <option value="Blockchain Development">Blockchain Development</option>
                <option value="Artificial Intelligence">Artificial Intelligence & ML</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-semibold text-base">Project Budget (OMR) *</span>
              </label>
              <select name="budget" required class="select select-bordered w-full focus:select-primary bg-base-100 text-base h-12">
                <option disabled selected>Select budget range</option>
                <option value="100 - 500 OMR">100 - 500 OMR</option>
                <option value="500 - 1,500 OMR">500 - 1,500 OMR</option>
                <option value="1,500 - 5,000 OMR">1,500 - 5,000 OMR</option>
                <option value="5,000 - 15,000 OMR">5,000 - 15,000 OMR</option>
                <option value="15,000+ OMR">15,000+ OMR</option>
              </select>
            </div>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold text-base">Project Timeline</span>
            </label>
            <select name="timeline" class="select select-bordered w-full focus:select-primary bg-base-100 text-base h-12">
              <option disabled selected>When do you need this completed?</option>
              <option value="ASAP">As soon as possible</option>
              <option value="1-2 weeks">1-2 weeks</option>
              <option value="1 month">Within 1 month</option>
              <option value="2-3 months">2-3 months</option>
              <option value="Flexible">Flexible timeline</option>
            </select>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-semibold text-base">Project Description *</span>
            </label>
            <textarea 
              name="message"
              placeholder="Please describe your project in detail:&#10;&#10;• What do you want to build?&#10;• Key features and functionality needed&#10;• Target audience&#10;• Any specific technologies or platforms&#10;• Reference websites or apps (if any)"
              required
              class="textarea textarea-bordered h-40 w-full focus:textarea-primary resize-none bg-base-100 text-base leading-relaxed"
            ></textarea>
          </div>

          <div class="form-control pt-6">
            <button 
              type="submit" 
              class="btn btn-primary w-full font-semibold text-lg h-14 rounded-xl"
              id="submit-btn"
            >
              <span id="submit-text">
                <i class="fa-brands fa-whatsapp mr-2"></i>
                Send Project Details via WhatsApp
              </span>
              <span id="submit-loading" class="loading loading-spinner loading-md hidden"></span>
            </button>
          </div>

          <div class="text-center text-sm text-base-content/60 mt-4">
            <i class="fa-solid fa-shield-halved mr-1"></i>
            Your information is secure and will only be used to contact you about your project
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-16 bg-base-200/50">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-12">
        <h3 class="text-2xl md:text-3xl font-bold text-primary mb-4">Why Choose Senior Blockchain Company?</h3>
        <p class="text-base-content/70 text-lg">Professional development services with transparent pricing</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center bg-base-100 rounded-2xl p-6 shadow-lg">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-code text-2xl text-primary"></i>
          </div>
          <h4 class="font-bold text-lg mb-3">Expert Development</h4>
          <p class="text-base-content/70 text-sm leading-relaxed">Professional coding with latest technologies and best practices</p>
        </div>
        
        <div class="text-center bg-base-100 rounded-2xl p-6 shadow-lg">
          <div class="w-16 h-16 bg-success/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-coins text-2xl text-success"></i>
          </div>
          <h4 class="font-bold text-lg mb-3">Affordable Pricing</h4>
          <p class="text-base-content/70 text-sm leading-relaxed">Competitive rates starting from 100 OMR with transparent pricing</p>
        </div>
        
        <div class="text-center bg-base-100 rounded-2xl p-6 shadow-lg">
          <div class="w-16 h-16 bg-info/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-clock text-2xl text-info"></i>
          </div>
          <h4 class="font-bold text-lg mb-3">Fast Delivery</h4>
          <p class="text-base-content/70 text-sm leading-relaxed">Quick turnaround times without compromising on quality</p>
        </div>

        <div class="text-center bg-base-100 rounded-2xl p-6 shadow-lg">
          <div class="w-16 h-16 bg-warning/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fa-solid fa-headset text-2xl text-warning"></i>
          </div>
          <h4 class="font-bold text-lg mb-3">24/7 Support</h4>
          <p class="text-base-content/70 text-sm leading-relaxed">Ongoing support and maintenance for your projects</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Information -->
  <section class="py-16 bg-base-100">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-12">
        <h3 class="text-2xl font-bold text-primary mb-4">Ready to Start?</h3>
        <p class="text-base-content/70 text-lg">Contact us directly through your preferred method</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center group">
          <div class="w-20 h-20 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-primary/20 transition-colors">
            <i class="fa-brands fa-whatsapp text-3xl text-primary"></i>
          </div>
          <h4 class="font-bold text-xl mb-3">WhatsApp</h4>
          <p class="text-base-content/70 mb-4">Get instant responses</p>
          <a href="https://wa.me/96891200634" target="_blank" class="btn btn-outline btn-primary btn-sm">
            <i class="fa-brands fa-whatsapp mr-2"></i>
            +968 9120 0634
          </a>
        </div>
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-info/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-info/20 transition-colors">
            <i class="fa-solid fa-envelope text-3xl text-info"></i>
          </div>
          <h4 class="font-bold text-xl mb-3">Email</h4>
          <p class="text-base-content/70 mb-4">Professional inquiries</p>
          <a href="mailto:post@sbc.om" class="btn btn-outline btn-info btn-sm">
            <i class="fa-solid fa-envelope mr-2"></i>
            post@sbc.om
          </a>
        </div>
        
        
        <div class="text-center group">
          <div class="w-20 h-20 bg-pink-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-pink-200 transition-colors">
            <i class="fa-brands fa-instagram text-3xl text-pink-500"></i>
          </div>
          <h4 class="font-bold text-xl mb-3">Instagram</h4>
          <p class="text-base-content/70 mb-4">Follow us for updates</p>
          <a href="https://instagram.com/seniorblockchain" target="_blank" class="btn btn-outline btn-pink-500 btn-sm">
            <i class="fa-brands fa-instagram mr-2"></i>
            @seniorblockchain
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('contact-form');
  const submitBtn = document.getElementById('submit-btn');
  const submitText = document.getElementById('submit-text');
  const submitLoading = document.getElementById('submit-loading');

  if (form && submitBtn && submitText && submitLoading) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Show loading state
      submitBtn.disabled = true;
      submitText.classList.add('hidden');
      submitLoading.classList.remove('hidden');
      
      // Get form data
      const formData = new FormData(form);
      const data = {};
      formData.forEach((value, key) => {
        data[key] = value;
      });
      
      // Prepare WhatsApp message
      let message = '*New Project Inquiry - Senior Blockchain Company*\n\n';
      message += '*Name:* ' + data.name + '\n';
      message += '*Email:* ' + data.email + '\n';
      if (data.phone) message += '*Phone:* ' + data.phone + '\n';
      if (data.company) message += '*Company:* ' + data.company + '\n';
      message += '*Service:* ' + data.service + '\n';
      if (data.budget) message += '*Budget:* ' + data.budget + '\n';
      if (data.timeline) message += '*Timeline:* ' + data.timeline + '\n';
      message += '\n*Project Description:*\n' + data.message;
      
      // Encode message for URL
      const encodedMessage = encodeURIComponent(message);
      const whatsappURL = 'https://wa.me/96891200634?text=' + encodedMessage;
      
      // Open WhatsApp in new tab
      window.open(whatsappURL, '_blank');
      
      // Reset form and show success message
      setTimeout(() => {
        form.reset();
        alert('Message prepared! Please send it via WhatsApp.');
        resetSubmitButton();
      }, 1000);
    });
  }
  
  function resetSubmitButton() {
    if (submitBtn && submitText && submitLoading) {
      submitBtn.disabled = false;
      submitText.classList.remove('hidden');
      submitLoading.classList.add('hidden');
    }
  }
});
</script>
