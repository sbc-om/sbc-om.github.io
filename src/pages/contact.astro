---
import Heading from "@components/Heading.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

interface Social {
  link: string;
  title: string;
  body: string;
  icon: string;
}

const socials: Social[] = [
  {
    link: "https://linkedin.com/company/seniorblockchain",
    title: "LinkedIn",
    body: "Join us for networking and updates.",
    icon: "fa-brands fa-linkedin",
  },
  {
    link: "https://twitter.com/seniorblock",
    title: "Twitter",
    body: "Follow us for the latest news and updates",
    icon: "fa-brands fa-x-twitter",
  },
  {
    link: "https://instagram.com/seniorblockchain",
    title: "Instagram",
    body: "See behind-the-scenes and stories from our team",
    icon: "fa-brands fa-instagram",
  },
];
---

<BaseLayout title="Contact">
  <Heading title="Contact" subtitle="Stay Connected with Us" />

  <div class="my-8 max-w-5xl md:mx-auto mx-8">
    <h2 class="h2 mb-4 font-bold">Find Us on Social Media</h2>
    <div class="grid grid-rows-3 gap-4 xl:grid-cols-3 xl:grid-rows-1">
      {
        socials.map((social) => {
          return (
            <a
              href={social.link}
              target="_blank"
              class="bg-base-200 rounded-box flex items-center gap-6 px-6 py-4 border-2 border-base-300 group transition-transform hover:scale-105 duration-300"
              id="card"
            >
              <i class={`${social.icon} text-3xl text-primary group-hover:text-primary/80 transition-colors duration-200`} />
              <div class="my-auto">
                <h3 class="text-2xl md:text-3xl font-bold">{social.title}</h3>
                <p class="hidden md:block font-medium text-gray-500 mt-4">{social.body}</p>
              </div>
            </a>
          );
        })
      }
    </div>
    <p class="text-center font-medium mt-16">
      Or directly reach out to us via email: <a
        class="link text-primary hover:underline"
        href="mailto:post@sbc.om">post@sbc.om</a>
    </p>
  </div>
</BaseLayout>
