---
import BaseLayout from "@layouts/BaseLayout.astro";
import Icon from "@components/Icon.astro";
import MotionDiv from "@components/MotionDiv.tsx";
---

<BaseLayout title="Our Portfolio - Senior Blockchain Company">
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-base-100 to-base-200 min-h-[80vh] flex items-center justify-center">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <MotionDiv client:load animation="slideDown" delay={0} duration={0.8}>
        <div class="mb-8">
          <Icon name="suitcase" size={80} class="mx-auto text-primary mb-6" />
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-primary mb-6">
          Our Portfolio
        </h1>
        <p class="text-xl md:text-2xl text-base-content/70 leading-relaxed max-w-3xl mx-auto mb-8">
          We're building amazing things for our clients
        </p>
      </MotionDiv>
      
      <MotionDiv client:load animation="scale" delay={0.3} duration={0.8}>
        <div class="bg-base-100 rounded-3xl p-12 shadow-2xl border-2 border-primary/20 max-w-2xl mx-auto">
          <div class="flex justify-center mb-6">
            <Icon name="rocket" size={64} class="text-primary animate-pulse" />
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6">
            Coming Soon!
          </h2>
          <p class="text-lg md:text-xl text-base-content/80 leading-relaxed mb-8">
            We're currently working on exciting projects for our clients. 
            Our portfolio will be updated soon with detailed case studies of our work.
          </p>
          <div class="bg-primary/10 border border-primary/30 rounded-2xl p-6 mb-8">
            <h3 class="text-xl font-semibold text-primary mb-4 flex items-center justify-center gap-2">
              <Icon name="lightbulb" size={24} />
              What We're Building
            </h3>
            <ul class="space-y-3 text-base-content/70 text-left max-w-md mx-auto">
              <li class="flex items-start gap-3">
                <Icon name="check" size={20} class="text-primary mt-1 flex-shrink-0" />
                <span>Advanced blockchain solutions</span>
              </li>
              <li class="flex items-start gap-3">
                <Icon name="check" size={20} class="text-primary mt-1 flex-shrink-0" />
                <span>AI-powered applications</span>
              </li>
              <li class="flex items-start gap-3">
                <Icon name="check" size={20} class="text-primary mt-1 flex-shrink-0" />
                <span>Modern web & mobile apps</span>
              </li>
              <li class="flex items-start gap-3">
                <Icon name="check" size={20} class="text-primary mt-1 flex-shrink-0" />
                <span>Enterprise software solutions</span>
              </li>
            </ul>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/#services" 
              class="btn btn-primary btn-lg px-8 rounded-full hover:scale-105 transition-all duration-300 flex items-center gap-2"
            >
              <Icon name="eye" size={20} />
              View Our Services
            </a>
            <a 
              href="/contact" 
              class="btn btn-outline btn-lg px-8 rounded-full hover:scale-105 transition-all duration-300 flex items-center gap-2"
            >
              <Icon name="envelope" size={20} />
              Start Your Project
            </a>
          </div>
        </div>
      </MotionDiv>

      <!-- Timeline Note -->
      <MotionDiv client:load animation="fade" delay={0.6} duration={0.8}>
        <div class="mt-12 bg-base-100/50 backdrop-blur-sm rounded-2xl p-6 border border-base-300/50">
          <p class="text-base-content/60 flex items-center justify-center gap-2">
            <Icon name="clock" size={20} />
            <span>Portfolio showcase will be available in the coming weeks</span>
          </p>
        </div>
      </MotionDiv>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-base-100">
    <div class="max-w-6xl mx-auto px-6">
      <MotionDiv client:load animation="slideUp" delay={0} duration={0.8}>
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4">
            Why Work With Us?
          </h2>
          <p class="text-lg text-base-content/70">
            Professional development with cutting-edge technologies
          </p>
        </div>
      </MotionDiv>

      <div class="grid md:grid-cols-3 gap-8">
        <MotionDiv client:load animation="slideUp" delay={0.2} duration={0.8}>
          <div class="bg-base-200 rounded-2xl p-8 text-center hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <Icon name="code" size={32} class="text-primary" />
            </div>
            <h3 class="text-xl font-bold mb-4">Expert Development</h3>
            <p class="text-base-content/70">
              Professional coding with latest technologies and best practices
            </p>
          </div>
        </MotionDiv>

        <MotionDiv client:load animation="slideUp" delay={0.3} duration={0.8}>
          <div class="bg-base-200 rounded-2xl p-8 text-center hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-success/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <Icon name="dollar" size={32} class="text-success" />
            </div>
            <h3 class="text-xl font-bold mb-4">Affordable Pricing</h3>
            <p class="text-base-content/70">
              Competitive rates starting from 100 OMR with transparent pricing
            </p>
          </div>
        </MotionDiv>

        <MotionDiv client:load animation="slideUp" delay={0.4} duration={0.8}>
          <div class="bg-base-200 rounded-2xl p-8 text-center hover:shadow-xl transition-all duration-300">
            <div class="w-16 h-16 bg-info/20 rounded-full flex items-center justify-center mx-auto mb-6">
              <Icon name="rocket" size={32} class="text-info" />
            </div>
            <h3 class="text-xl font-bold mb-4">Fast Delivery</h3>
            <p class="text-base-content/70">
              Quick turnaround times without compromising on quality
            </p>
          </div>
        </MotionDiv>
      </div>
    </div>
  </section>
</BaseLayout>


