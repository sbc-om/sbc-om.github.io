---
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";
import LoadingScreen from "@components/LoadingScreen.astro";
import BackToTop from "@components/BackToTop.astro";
import ThemeSwitcher from "@components/ThemeSwitcher.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en" data-theme="abyss">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>Senior Blockchain Company - {title}</title>
    <meta name="description" content="Senior Blockchain Company (SBC) - Professional software development specializing in Programming, Website Design, Mobile Applications, and Software Consulting with blockchain & AI expertise." />
    <meta name="keywords" content="programming, website design, mobile applications, software consulting, blockchain, AI, software development, technology solutions" />
    <meta name="author" content="Senior Blockchain Company" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={`Senior Blockchain Company - ${title}`} />
    <meta property="og:image" content="banner.jpg" />
    <meta property="og:description" content="Professional software development with programming, website design, mobile applications, and consulting services" />
    <meta property="og:url" content="https://sbc.om" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta property="twitter:description" content="Professional software development with programming, website design, mobile applications, and consulting services" />
    <meta property="twitter:title" content={`Senior Blockchain Company - ${title}`} />
    <meta property="twitter:image" content="banner.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@seniorblock" />
    
    <!-- Performance -->
    <link rel="dns-prefetch" href="//kit.fontawesome.com" />
    
    <style is:global>
      .bento-box {
        @apply p-8 text-center shadow-base-300 duration-300 hover:shadow-xl shadow-lg rounded-3xl bg-base-200 border-2 border-base-300 hover:-translate-y-1 transition-all;
      }

      .bento-heading {
        @apply mb-4 font-black;
      }

      .disc-list {
        @apply list-inside list-disc;
      }

      html {
        @apply scroll-smooth;
        scroll-padding-top: 4rem;
      }

      /* Enhanced button styles */
      .btn {
        @apply transition-all duration-300 ease-in-out;
      }

      .btn:hover {
        @apply shadow-lg;
      }

      .btn-primary:hover {
        @apply shadow-primary/25;
      }

      /* Loading state */
      .loading {
        @apply opacity-50 pointer-events-none;
      }

      /* Smooth page transitions */
      body {
        @apply transition-colors duration-300;
      }

      /* Enhanced cards */
      .card {
        @apply transition-all duration-300 hover:shadow-xl;
      }

      /* Improved typography */
      h1, h2, h3, h4, h5, h6 {
        @apply tracking-tight;
      }

      /* Better focus indicators */
      .focus-visible {
        @apply outline-2 outline-primary outline-offset-2;
      }
    </style>  </head>  <body class="antialiased">
    <LoadingScreen />
    <ThemeSwitcher />
    <Nav />
    <main class="overflow-x-hidden">
      <slot />
    </main>
    <Footer />
    <BackToTop />
    
    <!-- Theme initialization -->
    <script is:inline>
      // Initialize theme before page renders using existing sbc-theme key
      (function() {
        const savedTheme = localStorage.getItem('sbc-theme') || 'abyss';
        document.documentElement.setAttribute('data-theme', savedTheme);
        document.body.setAttribute('data-theme', savedTheme);
      })();
    </script>
    
    <!-- Smooth scroll polyfill for older browsers -->
    <script is:inline>
      // Enhanced smooth scroll
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });

      // Add loading states
      document.addEventListener('DOMContentLoaded', function() {
        document.body.classList.add('loaded');
      });

      // Enhanced performance monitoring
      window.addEventListener('load', function() {
        console.log('ðŸš€ SBC Website loaded successfully');
      });
    </script>
  </body>
</html>
