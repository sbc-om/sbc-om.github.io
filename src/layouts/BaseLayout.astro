---
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script
      is:inline
      defer
      src="https://kit.fontawesome.com/0c1fb969e1.js"
      crossorigin="anonymous"></script>
    <title>Senior Blockchain Company - {title}</title>
    <meta property="og:title" content={`Senior Blockchain Company - ${title}`} />
    <meta property="og:image" content="banner.jpg" />
    <meta property="og:description" content="Homepage of Senior Blockchain Company" />
    <meta property="og:url" content="https://sbc.om" />
    <meta property="twitter:description" content="Homepage of Senior Blockchain Company" />
    <meta property="twitter:title" content={`Senior Blockchain Company - ${title}`} />
    <meta property="twitter:image" content="banner.jpg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@seniorblock" />
    <style is:global>
      .bento-box {
        @apply p-8 text-center shadow-base-300 duration-200 hover:shadow-lg shadow-sm rounded-box bg-base-200 border-2 border-base-300;
      }

      .bento-heading {
        @apply mb-4 font-black;
      }

      .disc-list {
        @apply list-inside list-disc;
      }

      html {
        @apply scroll-smooth;
      }
    </style>
  </head>
  <body>
    <Nav />
    <main class="overflow-x-hidden">
      <slot />
    </main>
    <Footer />
  </body>
</html>
